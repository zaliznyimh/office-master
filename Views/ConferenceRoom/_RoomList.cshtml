@model IEnumerable<OfficeMaster.Models.ConferenceRoom>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <h4 style="color: var(--color-text-body);">No rooms match your filters. </h4>
        <p style="color: var(--color-text-body); opacity: 0.7;">Try adjusting dates, capacity, or
            removing some filters.</p>
    </div>
}

@foreach (var room in Model)
{
    <div class="col-md-6 col-lg-4">
        <div class="card h-100 border-0 shadow-sm room-card"
             data-price-per-hour="@room.PricePerHour">

            <div class="room-img-wrapper">
                @if (!string.IsNullOrEmpty(room.ImageUrl))
                {
                    <img src="@room.ImageUrl" alt="@room.Name" loading="lazy">
                }

                <span class="room-type-badge">@room.RoomType</span>
            </div>

            <div class="card-body d-flex flex-column p-4">

                <div class="d-flex justify-content-between align-items-start mb-2">
                    <h5 class="fw-bold mb-0 text-truncate"
                        style="color: var(--color-text-title); max-width: 65%;" title="@room.Name">
                        @room.Name
                    </h5>
                    <div class="text-end">
                        <span class="price-badge fw-bold d-block"
                              style="color: var(--color-action-primary); font-size: 1.1rem;">
                            @room.PricePerHour.ToString("C0")
                        </span>
                        <small
                            style="color: var(--color-text-body); font-size: 0.75rem; opacity: 0.7;">per
                            hour</small>
                    </div>
                </div>

                <p class="small mb-4"
                   style="color: var(--color-text-body); opacity: 0.8; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; height: 2.6em;">
                    @(room.Description ?? "No description available for this room.")
                </p>

                <div class="room-meta mt-auto">
                    <div class="meta-item" title="Capacity">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none"
                             stroke="currentColor" stroke-width="2" stroke-linecap="round"
                             stroke-linejoin="round">
                            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                            <circle cx="12" cy="7" r="4"></circle>
                        </svg>
                        <span>@room.Capacity`</span>
                    </div>

                    @if (room.HasProjector)
                    {
                        <div class="meta-item" style="color: var(--color-action-primary);" title="Projector Included">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none"
                                 stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                 stroke-linejoin="round">
                                <rect x="2" y="2" width="20" height="14" rx="2" ry="2"></rect>
                                <line x1="8" y1="2" x2="8" y2="16"></line>
                                <line x1="16" y1="2" x2="16" y2="16"></line>
                                <line x1="12" y1="18" x2="12" y2="22"></line>
                                <line x1="8" y1="22" x2="16" y2="22"></line>
                            </svg>
                            <span>Projector</span>
                        </div>
                    }
                </div>

                <a asp-controller="ConferenceRoom" asp-action="Details" asp-route-id="@room.Id" class="btn btn-book w-100 mt-3">
                    Book
                </a>
            </div>
        </div>
    </div>
}