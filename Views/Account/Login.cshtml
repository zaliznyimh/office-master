@model OfficeMaster.ViewModels.Auth.LoginViewModel

@{
    ViewData["Title"] = "Login";
    var returnUrl = ViewData["ReturnUrl"] as string;
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card shadow-lg border-0 rounded-4" style="background-color: var(--bg-secondary);">
            <div class="card-body p-5">
                
                <h2 class="text-center fw-bold mb-4" style="color: var(--color-text-title);">Welcome Back</h2>
                
                <form asp-action="Login" asp-route-returnUrl="@returnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3 text-center small"></div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label" style="color: var(--color-text-body);">Email</label>
                        <input asp-for="Email" class="form-control" placeholder="name@company.com" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label" style="color: var(--color-text-body);">Password</label>
                        <input asp-for="Password" class="form-control" placeholder="••••••" />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="mb-4 form-check">
                        <input class="form-check-input" asp-for="RememberMe" 
                               style="background-color: var(--bg-main); border-color: var(--color-action-sub); cursor: pointer;" />
                        <label class="form-check-label" asp-for="RememberMe" style="color: var(--color-text-body); cursor: pointer;">
                            Remember me
                        </label>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 fw-bold mb-4">
                        Log In
                    </button>

                    <div class="text-center">
                        <span style="color: var(--color-text-body); opacity: 0.7;">No account yet?</span>
                        <a asp-controller="Account" asp-action="Register" class="fw-bold text-decoration-none ms-1"
                           style="color: var(--color-text-title);">
                            Create one
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
