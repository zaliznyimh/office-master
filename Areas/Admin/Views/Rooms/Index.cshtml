@using OfficeMaster.Models.Enum
@model List<OfficeMaster.Models.ConferenceRoom>

@{
    ViewData["Title"] = "Manage Rooms";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-white">Manage Rooms</h3>
        <a asp-action="Create" class="btn btn-success fw-bold px-4 py-2">
            <i class="fas fa-plus me-2"></i> Add New Room
        </a>
    </div>

    <form asp-action="Index" method="get" id="filterForm">
        <div class="row mb-4">
            <div class="col-12">
                <div class="input-group">
                    <input type="text" name="search" class="form-control p-3 border-secondary bg-white text-dark"
                           placeholder="Search rooms by name"
                           value="@ViewBag.CurrentSearch">
                    <button type="submit" class="btn btn-primary px-4">
                        Search
                    </button>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-9">
                <div class="row g-4">
                    
                    @if (!Model.Any())
                    {
                        <div class="col-12 text-center py-5">
                            <h4 style="color: var(--color-text-body);">No rooms found.</h4>
                            <p>Try adding a new room or changing filters.</p>
                        </div>
                    }

                    @foreach (var room in Model)
                    {
                        <div class="col-md-6 col-lg-4">
                            <div class="card h-100 border-0 shadow-sm room-card"
                                 style="background-color: var(--bg-secondary);"
                                 data-price-per-hour="@room.PricePerHour">

                                <div class="room-img-wrapper position-relative" style="height: 200px; overflow: hidden;">
                                    @if (!string.IsNullOrEmpty(room.ImageUrl))
                                    {
                                        <img src="@room.ImageUrl" alt="@room.Name" class="w-100 h-100 object-fit-cover">
                                    }

                                    <span class="badge position-absolute top-0 end-0 m-3 px-3 py-2" 
                                          style="background: rgba(0,0,0,0.7); backdrop-filter: blur(5px);">
                                        @room.RoomType
                                    </span>
                                </div>

                                <div class="card-body d-flex flex-column p-4">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h5 class="fw-bold mb-0 text-truncate text-white" title="@room.Name" style="max-width: 65%;">
                                            @room.Name
                                        </h5>
                                        <div class="text-end">
                                            <span class="price-badge fw-bold d-block" style="color: var(--color-action-primary); font-size: 1.1rem;">
                                                @room.PricePerHour.ToString("C0")
                                            </span>
                                            <small style="font-size: 0.75rem;">per hour</small>
                                        </div>
                                    </div>

                                    <p class="small mb-5" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; 
                                    overflow: hidden; height: 2.6em; color: var(--color-text-title)">
                                        @(room.Description ?? "No description available.")
                                    </p>

                                    <div class="d-flex gap-3 small mt-auto mb-3">
                                        <div title="Capacity">
                                            <i class="fas fa-user-friends me-1" style="color: var(--color-text-title)"></i>
                                            <span style="color: var(--color-text-title)"> @room.Capacity </span>
                                        </div>
                                        
                                        @if (room.HasProjector)
                                        {
                                            <div title="Projector" class="mb-2" style="color: var(--color-action-primary);">
                                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none"
                                                     stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                                     stroke-linejoin="round">
                                                    <rect x="2" y="2" width="20" height="14" rx="2" ry="2"></rect>
                                                    <line x1="8" y1="2" x2="8" y2="16"></line>
                                                    <line x1="16" y1="2" x2="16" y2="16"></line>
                                                    <line x1="12" y1="18" x2="12" y2="22"></line>
                                                    <line x1="8" y1="22" x2="16" y2="22"></line>
                                                </svg>
                                                <span> Projector </span>
                                            </div>
                                        }
                                    </div>

                                    <div class="d-flex gap-2 mt-auto">
                                        <a asp-action="Edit" asp-route-id="@room.Id" class="btn btn-sm btn-outline-light flex-grow-1 fw-bold">
                                            Edit
                                        </a>
                                        
                                        <form asp-action="Delete" asp-route-id="@room.Id" method="post" class="flex-grow-1"
                                              onsubmit="return confirm('Are you sure you want to delete this room? This cannot be undone.');">
                                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="col-md-3">
                <div class="p-4 rounded-4 sticky-top border border-secondary"
                     style="background-color: var(--bg-secondary); top: 20px;">
                    
                    <h5 class="fw-bold mb-4 text-white">Filters</h5>

                    <div class="mb-4">
                        <label class="form-label mb-2">Check Availability</label>
                        <div class="mb-2">
                            <label class="small">From</label>
                            <input type="datetime-local" id="startDate" name="startDate" class="form-control"
                                   value="@ViewBag.StartDate"
                                   style="background-color: var(--bg-main); color: var(--color-text-title); border: 1px solid var(--color-action-sub);">
                        </div>
                        <div class="mb-2">
                            <label class="small">To</label>
                            <input type="datetime-local" id="endDate" name="endDate" class="form-control"
                                   value="@ViewBag.EndDate"
                                   style="background-color: var(--bg-main); color: var(--color-text-title); border: 1px solid var(--color-action-sub);">
                        </div>
                        <div id="dateError" class="alert alert-danger mt-2 py-2 small" style="display: none;">
                            End date must be after start date
                        </div>
                    </div>

                    <hr class="border-secondary opacity-50">

                    <div class="mb-4">
                        <label class="form-label mb-2">Capacity</label>
                        <div class="d-flex align-items-center gap-2">
                            <input type="number" name="minCapacity" class="form-control" placeholder="Min" min="1" value="@ViewBag.MinCapacity"
                                   style="background-color: var(--bg-main); color: var(--color-text-title); border: 1px solid var(--color-action-sub);">
                            <span>-</span>
                            <input type="number" name="maxCapacity" class="form-control" placeholder="Max" min="1" value="@ViewBag.MaxCapacity"
                                   style="background-color: var(--bg-main); color: var(--color-text-title); border: 1px solid var(--color-action-sub);">
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label mb-2">Room Type</label>
                        <select name="type" class="form-select" asp-items="Html.GetEnumSelectList<RoomType>()"
                                style="background-color: var(--bg-main); color: var(--color-text-title); border: 1px solid var(--color-action-sub);">
                            <option value="">All Types</option>
                        </select>
                    </div>

                    <div class="mb-4">
                        <label class="form-label mb-2">Facilities</label>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="hasProjector"
                                   value="true" id="tagPro" @(ViewBag.CurrentProjector == true ? "checked" : "")
                                   style="background-color: var(--bg-main); color: var(--color-text-title); border: 1px solid var(--color-action-sub);">
                            <label class="form-check-label text-white" for="tagPro">Projector</label>
                        </div>
                    </div>

                    <button type="submit" id="applyFiltersBtn" class="btn btn-primary w-100 mb-2 fw-bold">
                        Apply Filters
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary w-100">Reset</a>
                </div>
            </div>
        </div>
    </form>
</div>