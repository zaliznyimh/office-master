@model OfficeMaster.ViewModels.Dashboard.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row g-4 mb-5">
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100" style="background-color: var(--bg-secondary); border-radius: 16px;">
            <div class="card-body">
                <p class="text-uppercase small fw-bold mb-2" style="color: var(--color-text-body); opacity: 0.8;">Total Revenue</p>
                <div class="d-flex align-items-center justify-content-between">
                    <h2 class="fw-bold mb-0" style="color: var(--color-text-title);">@Model.TotalRevenue.ToString("C0")</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100" style="background-color: var(--bg-secondary); border-radius: 16px;">
            <div class="card-body">
                <p class="text-uppercase small fw-bold mb-2" style="color: var(--color-text-body); opacity: 0.8;">Total Bookings</p>
                <div class="d-flex align-items-center justify-content-between">
                    <h2 class="fw-bold mb-0" style="color: var(--color-text-title);">@Model.TotalBookings</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100" style="background-color: var(--bg-secondary); border-radius: 16px;">
            <div class="card-body">
                <p class="text-uppercase small fw-bold mb-2" style="color: var(--color-text-body); opacity: 0.8;">Active Rooms</p>
                <div class="d-flex align-items-center justify-content-between">
                    <h2 class="fw-bold mb-0" style="color: var(--color-text-title);">@Model.TotalRooms</h2>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100" style="background-color: var(--bg-secondary); border-radius: 16px; border: 1px solid rgba(250, 204, 21, 0.3);">
            <div class="card-body">
                <p class="text-uppercase small fw-bold mb-2" style="color: #facc15;">Pending Action</p>
                <div class="d-flex align-items-center justify-content-between">
                    <h2 class="fw-bold mb-0" style="color: var(--color-text-title);">@Model.PendingReservations.Count()</h2>
                </div>
            </div>
        </div>
    </div>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger border-0 text-white mb-4" style="background-color: #ef4444;">
        @TempData["Error"]
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success border-0 text-white mb-4" style="background-color: #10b981;">
        @TempData["Success"]
    </div>
}

<div class="card border-0 shadow-sm" style="background-color: var(--bg-secondary); border-radius: 16px;">
    <div class="card-header border-0 bg-transparent py-4 px-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h5 class="fw-bold mb-1" style="color: var(--color-text-title);">Pending Approvals</h5>
                <p class="small mb-0" style="color: var(--color-text-body);">Manage new reservation requests</p>
            </div>
            <span class="badge rounded-pill px-3 py-2" style="background-color: rgba(250, 204, 21, 0.1); color: #facc15;">
                @Model.PendingReservations.Count() requests
            </span>
        </div>
    </div>
    
    <div class="table-responsive rounded">
        <table class="table align-middle mb-0" style="border-color: var(--color-action-sub);">
            <thead style="background-color: rgba(0,0,0,0.2);">
            <tr>
                <th class="ps-4 py-3 small text-uppercase" style="color: var(--color-text-body); border-bottom: none;">Room</th>
                <th class="py-3 small text-uppercase" style="color: var(--color-text-body); border-bottom: none;">User</th>
                <th class="py-3 small text-uppercase" style="color: var(--color-text-body); border-bottom: none;">Date & Time</th>
                <th class="py-3 small text-uppercase" style="color: var(--color-text-body); border-bottom: none;">Total</th>
                <th class="pe-4 py-3 small text-uppercase text-end" style="color: var(--color-text-body); border-bottom: none;">Actions</th>
            </tr>
            </thead>
            
            <tbody>
            @foreach (var item in Model.PendingReservations)
                {
                    <tr class="hover-row" style="border-color: rgba(255,255,255,0.05); border-bottom: var(--bg-main) 1px solid;">
                        <td class="ps-4 py-3">
                            <div class="d-flex align-items-center">
                                <div class="rounded-3 overflow-hidden me-3" style="width: 48px; height: 48px; flex-shrink: 0;">
                                    @if (!string.IsNullOrEmpty(item.ConferenceRoom.ImageUrl))
                                    {
                                        <img src="@item.ConferenceRoom.ImageUrl" class="w-100 h-100 object-fit-cover" 
                                             alt="Room @item.ConferenceRoom.Name">
                                    }
                                </div>
                                <div>
                                    <div class="fw-bold" style="color: var(--bg-main);">@item.ConferenceRoom.Name</div>
                                    <div class="small" style="color: var(--bg-main);">@item.ConferenceRoom.RoomType</div>
                                </div>
                            </div>
                        </td>

                        <td class="py-3">
                            <div class="fw-bold" style="color: var(--bg-main);">@item.User.FirstName @item.User.LastName</div>
                            <div class="small" style="color: var(--bg-main);">@item.User.Email</div>
                        </td>

                        <td class="py-3">
                            <div style="color: var(--bg-main);">@item.StartTime.ToLocalTime().ToString("MMM dd, yyyy")</div>
                            <div class="small" style="color: var(--bg-main);">
                                @item.StartTime.ToLocalTime().ToString("HH:mm") - @item.EndTime.ToLocalTime().ToString("HH:mm")
                            </div>
                        </td>

                        <td class="py-3">
                            <span class="fw-bold" style="color: #4ade80;">@item.TotalPrice.ToString("C0")</span>
                        </td>

                        <td class="pe-4 py-3 text-end">
                            <div class="d-flex justify-content-end gap-2">
                                <form asp-controller="Dashboard" asp-action="Approve"  asp-route-id="@item.Id" method="post">
                                    <button type="submit" class="btn btn-sm fw-bold d-flex align-items-center gap-2" 
                                            style="background-color: rgba(16, 185, 129, 0.1); color: #10b981; border: none; padding: 8px 16px;">
                                        Approve
                                    </button>
                                </form>

                                <form asp-controller="Dashboard" asp-action="Reject" asp-route-id="@item.Id" method="post">
                                    <button type="submit" class="btn btn-sm fw-bold d-flex align-items-center gap-2"
                                            style="background-color: rgba(239, 68, 68, 0.1); color: #ef4444; border: none; padding: 8px 16px;">
                                        Reject
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>